<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_goods_storage"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@mipmap/storage_bg"
    tools:context="com.example.user.el.goodsStorage"
    android:layout_width="270dp"
    android:layout_height="400dp">

    <TextView
        android:text="已购资料"
        android:textSize="30sp"
        android:background="@drawable/textview_background"
        android:textColor="@color/text_white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/goods_storage_title" />



        <Button
            android:text="退出"
            android:textSize="30sp"
            android:onClick="leaveClick"
            android:textColor="@color/bg_white"
            android:background="@drawable/creator_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/storage_leave"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="match_parent"
        android:textSize="30sp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/storage_list"
        android:layout_above="@+id/storage_leave"
        android:layout_below="@+id/goods_storage_title" />


</RelativeLayout>
