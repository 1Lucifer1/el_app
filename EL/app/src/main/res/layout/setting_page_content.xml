<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_page_content"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mod">

        <TextView
            android:text="音乐"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:id="@+id/music"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="98dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="音效"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="59dp"
            android:id="@+id/voiceEffect"
            android:layout_below="@+id/music"
            android:layout_alignLeft="@+id/music"
            android:layout_alignStart="@+id/music" />

        <CheckBox
            android:text="开"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/voiceEffectTurnOn"
            android:layout_alignBaseline="@+id/voiceEffect"
            android:layout_alignBottom="@+id/voiceEffect"
            android:layout_toRightOf="@+id/music"
            android:layout_toEndOf="@+id/music" />

        <CheckBox
            android:text="开"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/musicTurnOn"
            android:layout_alignTop="@+id/music"
            android:layout_toRightOf="@+id/music"
            android:layout_toEndOf="@+id/music" />

        <CheckBox
            android:text="关"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="66dp"
            android:layout_marginStart="66dp"
            android:id="@+id/voiceEffectTurnOff"
            android:layout_alignTop="@+id/voiceEffect"
            android:layout_toRightOf="@+id/voiceEffectTurnOn"
            android:layout_toEndOf="@+id/voiceEffectTurnOn" />

        <CheckBox
            android:text="关"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/musicTurnOff"
            android:layout_alignBaseline="@+id/musicTurnOn"
            android:layout_alignBottom="@+id/musicTurnOn"
            android:layout_alignLeft="@+id/voiceEffectTurnOff"
            android:layout_alignStart="@+id/voiceEffectTurnOff" />

        <Button
            android:text="开发者名单"
            android:id="@+id/creator"
            android:layout_marginTop="99dp"
            android:gravity="center"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/voiceEffectTurnOff"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>