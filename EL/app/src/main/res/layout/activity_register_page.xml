<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register_background"
    tools:context="com.example.user.el.registerPage">

    <TextView
        android:text="@string/title_name"
        android:textSize="75sp"
        android:textStyle="bold|italic"
        android:textColor="@color/text_white"
        android:gravity="center"
        android:shadowColor="@color/text_blue"
        android:shadowRadius="3.0"
        android:shadowDx="10.0"
        android:shadowDy="10.0"
        android:layout_width="500sp"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="80dp" />

    <Button
        android:text="登录"
        android:background="@drawable/register_button"
        android:textColor="@color/text_white"
        android:textSize="30sp"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:id="@+id/enrollment"
        android:onClick="enrollClick"
        android:layout_above="@+id/registeration"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:text="注册"
        android:background="@drawable/register_button"
        android:textColor="@color/text_white"
        android:textSize="30sp"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:onClick="registerClick"
        android:id="@+id/registeration"
        android:layout_marginBottom="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/enrollment"
        android:layout_alignStart="@+id/enrollment" />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="账号"
                android:textColor="@color/text_white"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/account"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:hint="your account"
                android:textSize="18sp"
                android:textColorHint="#cdd1d6"
                android:background="@drawable/textview_background"
                android:textColor="@color/text_white"
                android:id="@+id/account_input"
                android:layout_height="40dp"
                android:maxLines="1"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="密码"
                android:textColor="@color/text_white"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:id="@+id/password"
                android:layout_weight="1" />

            <EditText
                android:layout_width="0dp"
                android:textSize="18sp"
                android:hint="your password"
                android:inputType="textPassword"
                android:textColorHint="#cdd1d6"
                android:background="@drawable/textview_background"
                android:textColor="@color/text_white"
                android:id="@+id/password_input"
                android:layout_height="40dp"
                android:maxLines="1"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
